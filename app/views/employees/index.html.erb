<p style="color: green"><%= notice %></p>

<h1>Estados</h1>
<div data-controller="select-filter" data-select-filter-url="<%= status_filter_path %>">
  <div class="form-group" id="employees_status">
    <input name="status" value="both" type="checkbox" data-action="select-filter#change" />Todos

    <input name="status" value="active" type="checkbox" data-action="select-filter#change" />Activos

    <input name="status" value="inactive" type="checkbox" data-action="select-filter#change" />Inactivos
  </div>

  <div id="employees">
    <div class="row">
      <div class="col-9" data-select-filter-target="employees">  
        <%= render partial: 'employee_list', locals: { employees: @employees} %>
      </div>
    </div>
  </div>
</div>




<%= link_to "Nuevo empleado", new_employee_path %>
